<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCFE1F2"
    tools:context="app.calcounter.com.calcounter.MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:textColor="#FFFA3E6D"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:text="@string/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:src="@drawable/apple"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleText"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@+id/logo"
        android:gravity="center_horizontal"
        android:background="@drawable/row_bg"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:hint="@string/hint_food"
            android:layout_marginTop="18dp"
            android:padding="14dp"
            android:id="@+id/foodEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:padding="14dp"
            android:inputType="number"
            android:hint="@string/hint_calories"
            android:id="@+id/caloriesEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <Button
            android:background="#cde"
            android:text="@string/submit_text"
            android:layout_marginTop="14dp"
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    
    
</RelativeLayout>
