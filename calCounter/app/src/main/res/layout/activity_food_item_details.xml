<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCFE1F2"
    tools:context="app.calcounter.com.calcounter.FoodItemDetailsActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/apple"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:background="@drawable/row_bg"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Hi"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/detsFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="Calories"
            android:id="@+id/detsCaloriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/detsCaloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Consumed on:"
            android:id="@+id/detsDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="45dp"
            android:background="@drawable/circle"
            android:id="@+id/detsShareButton"
            android:layout_gravity="right"
            android:text="@string/share_title"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

</RelativeLayout>
