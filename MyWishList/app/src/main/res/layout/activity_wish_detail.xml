<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ced"
    tools:context="mindfu.javaprojects.com.mywishlist.WishDetailActivity">

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textColor="#64a224"
        android:text="My Title"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="My wish..."
        android:textSize="20sp"
        android:id="@+id/detailsTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detailsTitle"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#64a224"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:text="Date: "
        android:layout_marginRight="60dp"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:layout_below="@+id/detailsTextView"
        android:id="@+id/detailsDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
